<EditForm Model="@Scope" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Scope Name</label>
        <div>
            <InputText class="col-md-4 form-control" @bind-Value="@Scope.ScopeName" />
            <ValidationMessage For="@(() => Scope.ScopeName)" />
        </div>
    </div>
   
    <div class="form-group">
        <button type="submit" class="btn btn-dark">
            @ButtonText
        </button>
    </div>


</EditForm>
@code {

    [Parameter] public Scope Scope { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save Scope";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
