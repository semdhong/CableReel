<EditForm Model="@Site" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Site Id</label>
        <div>
            <InputText class="col-md-4 form-control" @bind-Value="@Site.SiteId" />
            <ValidationMessage For="@(() => Site.SiteId)" />
        </div>
    </div>
    <label>Site Name</label>
    <div class="form-group">
        <div>
            <InputText class="col-md-4 form-control" @bind-Value="@Site.SiteName" />
            <ValidationMessage For="@(() => Site.SiteName)" />
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-dark">
            @ButtonText
        </button>
    </div>
    <div class="form-group">
        <label>Homing Id</label>
        <div>
            <InputText class="col-md-4 form-control" @bind-Value="@Site.Homing" />

        </div>
    </div>
    <div class="form-group">
        <label>Barangay</label>
        <div>
            <InputText class="col-md-4 form-control" @bind-Value="@Site.Brgy" />

        </div>
    </div>

</EditForm>
@code {

    [Parameter] public Site Site { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save Site";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
